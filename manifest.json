{
  "manifest_version": 2,
  "name": "ADP Auto Timecard",
  "description": "Automatically fill out your timecard with the given project code. Use: Open up the ATC Options page or click the toolbar icon and add your time entries. Then go to the Timecard page on ADP and click the Autfill button.",
  "version": "1.4",
  "browser_action": {
    "default_icon": "images/atc-rebel16.png",
	  "default_popup": "options.html"
  },
  "icons": {
    "16": "images/atc-rebel16.png",
    "48": "images/atc-rebel48.png",
    "128": "images/atc-rebel128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://workforcenow.adp.com/*"],
      "css": ["styles.css"],
      "js": ["/resources/jquery.js", "/resources/bililiteRange.js", "/resources/jquery.sendkeys.js", "adpAutoTimecard.js"]
    }
  ],
  "web_accessible_resources": [
    "images/*"
  ], 
  "options_page": "options.html",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
	  "storage"
  ]
}